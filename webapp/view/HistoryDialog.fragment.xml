<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
  <Dialog id="historyDialog" title="Asked Questions History" draggable="true" resizable="true">
    <VBox>
      <HBox justifyContent="End" class="sapUiTinyMarginBottom">
        <Button text="Weekly" press=".onFilterWeekly" type="Emphasized" />
        <Button text="Monthly" press=".onFilterMonthly" type="Emphasized" class="sapUiTinyMarginBegin" />
      </HBox>

      <List id="historyList" items="{
    path: 'history>/questions'
  }">
        <CustomListItem>
          <VBox class="sapUiSmallMargin">
            <Text text="{history>Question}" wrapping="true" />
            <Text text="{history>Answer}" wrapping="true" />
            <Text text="{history>CreatedAt}" wrapping="true"/>
          </VBox>
        </CustomListItem>
      </List>
    </VBox>
    <endButton>
      <Button text="Close" press=".onCloseHistoryDialog" />
    </endButton>
  </Dialog>
</core:FragmentDefinition>
